{% layout 'layout' %}
{% block title %}Shopping Cart{% endblock %}

{% block breadcrumb %}
<li><a href="index.html">Home</a></li>
<li>App Templates</li>
<li>eCommerce</li>
<li class="active"><a href="app-store-shoppingcart.html">Shopping Cart</a></li>
{% endblock %}

{% block styles %}
{{ "plugins/bootstrap-touchspin/dist/jquery.bootstrap-touchspin.min.css" | asset_url | stylesheet_tag }} 	<!-- Touchspin -->
{% endblock %}

{% block scripts %}
{{ "plugins/bootstrap-touchspin/dist/jquery.bootstrap-touchspin.js" | asset_url | script_tag }} 				<!-- Touchspin -->

<script>
$(function() {
    $("input.touchspin").TouchSpin({
      verticalbuttons: true
    });
});
</script>
{% endblock %}

