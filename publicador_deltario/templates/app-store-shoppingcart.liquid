						<th>Name</th>
						<th>Price</th>
						<th>Quantity</th>
						<th style="text-align: right;">Subtotal</th>
					</thead>
					<tbody>
						<tr>
							<td>#001</td>
							<td>Item 1</td>
							<td>A</td>
							<td>$500</td>
							<td style="width: 80px;"><input type="text" class="form-control touchspin" value="1"></td>
							<td style="text-align: right;">$999</td>
						</tr>
						<tr>
							<td>#002</td>
							<td>Item 2</td>
							<td>B</td>
							<td>$999</td>
							<td style="width: 80px;"><input type="text" class="form-control touchspin" value="1"></td>
							<td style="text-align: right;">$999</td>
						</tr>
						<tr>
							<td>#003</td>
							<td>Item 3</td>
							<td>C</td>
							<td>$999</td>
							<td style="width: 80px;"><input type="text" class="form-control touchspin" value="1"></td>
							<td style="text-align: right;">$999</td>
						</tr>
						<tr>
							<td>#004</td>
							<td>Item 4</td>
							<td>D</td>
							<td>$999</td>
							<td style="width: 80px;"><input type="text" class="form-control touchspin" value="1"></td>
